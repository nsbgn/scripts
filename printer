##############################################################################
# enscript

# --columns=2 \

enscript \
    --printer="$PRINTER" \
    --media=A4 \
    --font=Courier\@16 \
    --no-header \
    --nup=4 \
    --nup-xpad=20 \
    --nup-ypad=20 \
    "$FILE"

